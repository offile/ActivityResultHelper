<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.helper.widget.Flow
        android:orientation="vertical"
        app:flow_verticalGap="10dp"
        app:constraint_referenced_ids="startActivityForResult,requestPermissions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/startActivityForResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_for_result"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/requestPermissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/requestPermissions"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>